{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "jsx": "preserve",
      "lib": ["dom", "es2015", "es2017"],
      "strict": true,
      "noEmit": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": false
    },
    //The include property points to an array of filenames or 
    //paths that the compiler knows to convert from TypeScript to JavaScript.
    //more info @ https://www.digitalocean.com/community/tutorials/how-to-set-up-a-gatsby-project-with-typescript
    "include": ["./src/**/*"]
  }